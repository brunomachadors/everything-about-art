generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model artwork {
  id           String   @id @default(uuid())          // ✅ ID com UUID automático
  title        String                                // ✅ Título obrigatório
  artist       String                                // ✅ Artista obrigatório
  year         Int                                   // ✅ Ano como inteiro
  origin       String                                // ✅ País obrigatório
  style        String?                               // ✅ Campo antigo (pode ser removido depois)
  styleArray   String[] @default([])                 // ✅ Campo novo como array, com valor padrão
  technique    String?                               // ✅ Técnica opcional
  location     String?                               // ✅ Local opcional
  description  Json                                  // ✅ Descrição (texto/imagens estruturadas)
  image        String                                // ✅ URL da imagem obrigatória
  images       String[]                              // ✅ Galeria de imagens
  tags         String[]                              // ✅ Tags extras
  curiosities  String[]                              // ✅ Curiosidades da obra
  quote        String?                               // ✅ Frase icônica opcional
  pricehistory Json                                  // ✅ Histórico de preço
  createdat    DateTime @default(now())              // ✅ Timestamp de criação
}

